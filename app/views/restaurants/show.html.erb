<h2><%= @restaurant.name %></h2>
<br>
<h3><%= @restaurant.address %></h3>
<br>
<h4> Category: <%= @restaurant.category.capitalize %>
  <h4>
    <br>
    <h5>Phone Number: <%= @restaurant.phone_number %></h5>
    <h4>Reviews</h4>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content%> - <%= review.rating %> stars</li>
      <% end %>
    </ul>
    <container>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :rating %>
        <%= f.input :content %>
        <%= f.submit "Submit review", class: "btn btn-primary" %>
      <% end %>
    </container>
    <%= link_to "Leave a review", new_restaurant_review_path(@restaurant) %>
    <br>
    <%= link_to "Back to list", restaurants_path %>
