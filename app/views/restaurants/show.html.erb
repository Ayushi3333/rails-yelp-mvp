<h2><%= @restaurant.name %></h2>
<br>
<h3><%= @restaurant.address %></h3>
<br>
<h4> Category: <%= @restaurant.category.capitalize %>
  <h4>
    <br>
    <h5>Phone Number: <%= @restaurant.phone_number %></h5>
    <h4>Reviews</h4>
    <ul>
      <% @restaurant.reviews.each do |review| %>
        <li><%= review.content%> - <%= review.rating %> stars</li>
      <% end %>
    </ul>
    <%= render "reviews/form" %>
    <br>
    <%= link_to "Back to list", restaurants_path %>
